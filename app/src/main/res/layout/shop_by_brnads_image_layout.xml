<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="shopByName"
            type="com.blink.blinkshopping.models.allcategorymodel.AllCategoryData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dp5"
        android:layout_marginVertical="@dimen/dp5">

        <com.blink.blinkshopping.customViews.CustomBoldTextView
            android:id="@+id/txtshopByBrabds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvShopByBrands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp4"
            android:orientation="horizontal" />
    </LinearLayout>
</layout>
