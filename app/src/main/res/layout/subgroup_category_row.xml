<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   android:padding="@dimen/_10sdp">


    <com.blink.blinkshopping.customViews.CustomBoldTextView
        android:id="@+id/category_row_tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/category_row_iv_expand"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        tools:text="Quick and Easy food solutions" />

    <ImageView
        android:id="@+id/category_row_iv_expand"
        android:layout_width="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="25dp"
        android:padding="@dimen/_5sdp"
        tools:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

</RelativeLayout>