<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    android:background="@color/light_gray"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">
    <ImageView
        android:id="@+id/headerIcon"
        android:layout_width="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="30dp"
        fresco:srcCompat="@drawable/ic_favourite" />

    <com.blink.blinkshopping.customViews.CustomTextView
        android:id="@+id/category_row_tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/category_row_iv_expand"
        android:layout_toRightOf="@+id/headerIcon"
        android:layout_marginRight="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        tools:text="Quick and Easy food solutions" />

    <ImageView
        android:id="@+id/category_row_iv_expand"
        android:layout_width="25dp"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_centerVertical="true"
        android:layout_height="25dp"
        tools:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

</RelativeLayout>